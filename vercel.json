{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "src/**/*.tsx", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/[^.]+", "dest": "/", "status": 200 },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
